<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#124244"
    tools:context=".ProfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:text=" Edit Profil"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:background="#FFFF"
        android:orientation="vertical"
        android:padding="24dp">


        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/baseline_kamera_24"
            android:layout_marginLeft="220dp"/>

        <ImageView
            android:id="@+id/menu1"
            android:layout_width="165dp"
            android:layout_height="150dp"
            android:layout_marginLeft="60dp"
            android:paddingRight="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iqbaal" />

        <EditText
            android:id="@+id/editnama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:drawableLeft="@drawable/baseline_nama_24"
            android:drawablePadding="8dp"
            android:hint="nama"
            android:padding="12dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:hint="email"
            android:padding="12dp"
            android:textColorHint="@color/black" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="8dp"
            android:hint="Phone"
            android:padding="12dp"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btnsimpan"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#124244"
            android:padding="8dp"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="20dp"/>



    </LinearLayout>

</FrameLayout>